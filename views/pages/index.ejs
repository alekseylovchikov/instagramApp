<!doctype html>
<html lang="en">
    <head>
        <% include ../partials/head.ejs %>
    </head>
    <body>
        <% include ../partials/header.ejs %>
        <article class="container">
            <main id="content">
                <div class="row">
                    <% grams.forEach(function(gram) { %>
                        <div class="col-sm-6 col-md-6">
                            <div class="thumbnail img-shadow">
                                <section class="profile-pic">
                                    <p class="move-right"><a href="https://instagram.com/<%= gram.user.username %>/" target="_blank"><img class="img-circle img-thumbnail" width="80" src="<%= gram.user.profile_picture %>" alt="<%= gram.user.username %>"/></a></p>
                                </section>
                                <section class="profile-info">
                                    <p><a href="https://instagram.com/<%= gram.user.username %>/"><%= gram.user.username %></a><br/><strong><%= gram.user.full_name %></strong></p>
                                </section>
                                <p><a href="<%= gram.link %>" target="_blank"><img class="img-responsive img-thumbnail" src="<%= gram.images.standard_resolution.url %>" alt="<%= gram.user.username %>"/></a></p>
                                <div class="caption">
                                    <br/>
                                    <p>
                                        <button type="button" class="btn btn-danger" title="Like"><span class="glyphicon glyphicon-heart"></span></button> <button type="button" class="btn btn-success" title="Follow"><span class="glyphicon glyphicon-plus"></span></button>
                                        <% if(gram.caption !== null) {  %>
                                            <button type="button" class="btn btn-primary" data-container="body" data-toggle="popover" data-placement="top" data-content="<%= gram.caption.text %>"><span class="glyphicon glyphicon-comment"></span></button>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </main>
        </article>
        <div class="air"></div>
        <p class="text-center"><a class="btn btn-primary" href="/">RELOAD POPPI</a></p>
        <div class="air"></div>
        <footer id="contacts" class="main-footer">
            <% include ../partials/footer.ejs %>
        </footer>
        <script>
          $(document).ready(function() {
              $('[data-toggle="popover"]').popover({'placement': 'top'});
              $('[data-toggle="tooltip"]').tooltip();
          });
        </script>
        <script>
            function reload() {
                window.location = "/";
            }

            $(window).load(function() {
                $(document).ready(function() {
                    $('.Collage').removeWhitespace().collagePlus({ 'fadeSpeed': 200, 'allowPartialLastRow': false }).collageCaption();
                });
            });
        </script>
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-61836828-1', 'auto');
            ga('send', 'pageview');

        </script>
    </body>
</html>
